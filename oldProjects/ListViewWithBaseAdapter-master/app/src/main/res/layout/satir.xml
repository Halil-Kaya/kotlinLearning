<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txView"
        android:layout_width="173dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgResim"
        app:layout_constraintStart_toEndOf="@+id/imgResim"
        app:layout_constraintTop_toTopOf="@+id/imgResim" />

    <Button
        android:id="@+id/btnSil"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/trashicon"
        app:layout_constraintBottom_toBottomOf="@+id/txView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txView" />

    <ImageView
        android:id="@+id/imgResim"
        android:layout_width="91dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/birinci" />

    <Button
        android:id="@+id/btnDuzenle"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/editicon"
        app:layout_constraintBottom_toBottomOf="@+id/txView"
        app:layout_constraintEnd_toStartOf="@+id/btnSil"
        app:layout_constraintStart_toEndOf="@+id/txView"
        app:layout_constraintTop_toTopOf="@+id/txView" />
</androidx.constraintlayout.widget.ConstraintLayout>
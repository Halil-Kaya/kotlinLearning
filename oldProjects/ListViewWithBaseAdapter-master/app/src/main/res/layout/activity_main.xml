<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnEkle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/addicon"
        app:layout_constraintBottom_toBottomOf="@+id/etGorev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etGorev" />


    <View
        android:id="@+id/view3"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="553dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"></View>


    <EditText
        android:id="@+id/etGorev"
        android:layout_width="282dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Gorev Gir"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/rootListView"
        android:layout_width="384dp"
        android:layout_height="514dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/etGorev"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbIlk"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1. Resim" />

        <RadioButton
            android:id="@+id/rbOrta"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="2. Resim" />

        <RadioButton
            android:id="@+id/rbSon"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="3. Resim" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_marginTop="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgOdayiOlusturaninResmi"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <TextView
            android:id="@+id/tvOdayiOlusturaninAdi"
            android:layout_width="216dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/imgOdayiOlusturaninResmi"
            app:layout_constraintStart_toEndOf="@+id/imgOdayiOlusturaninResmi"
            app:layout_constraintTop_toTopOf="@+id/imgOdayiOlusturaninResmi" />

        <Button
            android:id="@+id/btnSohbetiSil"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/trashicon"
            app:layout_constraintBottom_toBottomOf="@+id/tvOdayiOlusturaninAdi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvOdayiOlusturaninAdi"
            app:layout_constraintTop_toTopOf="@+id/tvOdayiOlusturaninAdi" />

        <TextView
            android:id="@+id/tvOdaIsmi"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgOdayiOlusturaninResmi" />

        <TextView
            android:id="@+id/tvMesajSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/tvOdaIsmi"
            app:layout_constraintEnd_toEndOf="@+id/btnSohbetiSil"
            app:layout_constraintTop_toTopOf="@+id/tvOdaIsmi" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>